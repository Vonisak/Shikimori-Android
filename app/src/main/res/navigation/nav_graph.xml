<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainAnimeListFragment">

    <fragment
        android:id="@+id/mainAnimeListFragment"
        android:name="com.example.shikimoriandroid.ui.fragments.MainAnimeListFragment"
        android:label="fragment_main_anime_list"
        tools:layout="@layout/fragment_main_anime_list">
        <action
            android:id="@+id/action_mainAnimeListFragment_to_animePageFragment"
            app:destination="@id/animePageFragment">
        </action>
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.shikimoriandroid.ui.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_authFragment"
            app:destination="@id/authFragment" />
        <action
            android:id="@+id/action_profileFragment_to_userListFragment"
            app:destination="@id/userListFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.shikimoriandroid.ui.fragments.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/animePageFragment"
        android:name="com.example.shikimoriandroid.ui.fragments.AnimePageFragment"
        android:label="fragment_anime_page"
        tools:layout="@layout/fragment_anime_page">
        <action
            android:id="@+id/action_animePageFragment_to_mainAnimeListFragment"
            app:destination="@id/mainAnimeListFragment" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.shikimoriandroid.ui.fragments.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth" >
        <action
            android:id="@+id/action_authFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/userListFragment"
        android:name="com.example.shikimoriandroid.ui.fragments.UserListFragment"
        android:label="fragment_user_list"
        tools:layout="@layout/fragment_user_list" >
        <action
            android:id="@+id/action_userListFragment_to_animePageFragment"
            app:destination="@id/animePageFragment" />
    </fragment>
</navigation>